{{!
    @template core/modal_copycourse

    Moodle modal template with cancel and cancel buttons.

    The purpose of this template is to render a modal.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Context variables required for this template:
    * title A cleaned string (use clean_text()) to display.
    * body HTML content for the body

    Example context (json):
    {
        "title": "Example save cancel modal",
        "body": "Some example content for the body"
    }
}}

{{< core/modal }}
    {{$title}}{{#str}} copycourse {{/str}}{{/title}}
    {{$body}}
        <div class="container">
            <form>
                <div class="form-group row">
                    <label for="inputFullname" class="col-sm-2 col-form-label">{{#str}} fullname {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputFullname" placeholder="{{#str}} {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputShortname" class="col-sm-2 col-form-label">{{#str}} shortname {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputShortname" placeholder="{{#str}} {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputCategory" class="col-sm-2 col-form-label">{{#str}} category {{/str}}</label>
                    <div class="col-sm-10">
                        <select {{#attributes}}{{name}}="{{value}}" {{/attributes}} id="{{id}}" class="custom-select {{classes}}" name="selectCategory">
                        {{#options}}
                            {{#isgroup}}
                                <optgroup label="{{name}}">
                                    {{#options}}
                                        <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                                    {{/options}}
                                </optgroup>
                            {{/isgroup}}
                            {{^isgroup}}
                                <option value="{{value}}" {{#selected}}selected{{/selected}}>{{name}}</option>
                            {{/isgroup}}
                        {{/options}}
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputStartdate" class="col-sm-2 col-form-label">{{#str}} startdate {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputStartdate" placeholder="{{#str}} {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputEnddate" class="col-sm-2 col-form-label">{{#str}} enddate {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputEnddate" placeholder="{{#str}} {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputVisibility" class="col-sm-2 col-form-label">{{#str}} coursevisibility {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputVisibility" placeholder="{{#str}} {{/str}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="inputKeepmanualenrolmentsroles" class="col-sm-2 col-form-label">{{#str}} keepmanualenrolmentsroles {{/str}}</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="inputKeepmanualenrolmentsroles">
                    </div>
                </div>
            </form>
        </div>
    {{/body}}
    {{$footer}}
        <button type="button" class="btn btn-primary" data-action="copy">{{#str}} copy {{/str}}</button>
        <button type="button" class="btn btn-secondary" data-action="cancel">{{#str}} cancel {{/str}}</button>
    {{/footer}}
{{/ core/modal }}